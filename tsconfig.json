{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "strict": true,
        "paths": {
            "@/*": ["src/*"],
            "@@/*": ["src/.umi/*"]
        }
    },
    "include": ["mock/**/*", "src/**/*", "config/**/*", "typings.d.ts"],
    "exclude": ["node_modules", "build", "dist", "scripts", "src/.umi/*"]
}
